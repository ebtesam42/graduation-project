using System;
using System.Collections.Generic;
using System.Data.SqlClient;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;

namespace WebApplication2
{
    public partial class addCV : System.Web.UI.Page
    {
        protected void Page_Load(object sender, EventArgs e)
        {

        }

        protected void Button1_Click(object sender, EventArgs e)
        {

            SqlConnection conn = new SqlConnection(@"Data Source=.\sqlexpress;Integrated Security=True");
            String sql;
            sql = "Insert into [AddCV] values ( '" + TextBox3.Text + "' , '" + TextBox1.Text + "' , '" + TextBox4.Text + "' , '" + TextBox5.Text + "' , '" + TextBox6.Text + "')";
            SqlCommand comm = new SqlCommand(sql, conn);

            try
            {
                conn.Open();
                comm.ExecuteNonQuery();
                TextBox3.Text = "";
                TextBox1.Text = "";
                TextBox4.Text = "";
                TextBox5.Text = "";
                TextBox6.Text = "";
                Label1.Text = " Successful adding";
            }
            catch
            {
                Label1.Text = "Faild";
            }
            finally
            {
                conn.Close();
            }


        }




    }
}
