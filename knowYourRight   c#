using System;
using System.Collections.Generic;
using System.Data;
using System.Data.SqlClient;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;

namespace law
{
    public partial class knowYourRight : System.Web.UI.Page
    {
        protected void Page_Load(object sender, EventArgs e)
        {

        }

        protected void Button1_Click(object sender, EventArgs e)
        {

            SqlConnection conn = new SqlConnection(@"Data Source=.\Sqlexpress;Initial Catalog=lawbrella;Integrated Security=True");
            String sql;
            sql = "Insert into [knowYourRight] values ('" + TextBox2.Text + "' , '" + TextBox3.Text + "')";
            SqlCommand comm = new SqlCommand(sql, conn);

            try
            {
                conn.Open();
                comm.ExecuteNonQuery();
                TextBox2.Text = "";
                TextBox3.Text = "";
                Label1.Text = "THAT'S true";
            }
            catch
            {
                Label1.Text = "THAT'S not true";
            }
            finally
            {
                conn.Close();
            }


        }
    }
}
